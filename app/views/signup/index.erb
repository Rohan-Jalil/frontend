<h1> Signup </h1>

<% if (@error) %>
<%=@error%>
<% end %>



<%= form_tag("/signup", method: "post",autocomplete: 'off') do %>
  <%= label_tag(:name, "Name:") %>
  <br />
  <%= text_field_tag(:name) %>
  <br />
  <%= label_tag(:email, "Email:") %>
  <br />
  <%= text_field_tag(:email) %>
  <br />
   <%= label_tag(:password, "Password:") %>
  <br />
  <%= password_field_tag(:password) %>
  <br />
  <%= submit_tag("Sign up") %>
<% end	%>